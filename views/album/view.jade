extends ../layout
include ../gallery
include ../aside

block head
  link(rel="stylesheet", href="/style/user.css")
  script(src="/script/app.js")

block toolbar
  ul.nav.span3
    li.toolbar-link: a(href="/photos/all") All Pictures
    li.toolbar-link: a(href="/albums") Albums
  #messages.span6

  ul.nav.span1.tools
    li.tool-link
      a(id="delete-album-button", href="javascript:void(0)", title="Delete album")
        i.icon-trash

block content
  #content.main.container(data-type="gallery")
    h1= name
    mixin gallery(photos)
    mixin aside(albums, name)
