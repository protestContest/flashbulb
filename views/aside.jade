mixin aside(albums, name)
  script(src="//code.jquery.com/ui/1.10.2/jquery-ui.js")
  script(src="/script/lib/h5utils.js")
  script(src="/script/src/drag.js")

  if (albums.length || name !== "Unsorted")
    aside Move to album
      each album in albums
        if (album !== name)
          .album= album
      if (name !== "Unsorted")
        .album Unsorted
